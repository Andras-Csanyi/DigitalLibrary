        <AssemblyName>DigitalLibrary.MasterData.Web.Api.Features</AssemblyName>
        <RootNamespace>DigitalLibrary.MasterData.Web.Api.Features</RootNamespace>
        <LangVersion>default</LangVersion>
        <CodeAnalysisRuleSet>../../Rulesets/DigitalLibrary.ruleset</CodeAnalysisRuleSet>
